<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow all certificates for development (ngrok) -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    
    <!-- Specific domain configuration for ngrok -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">5458ca2b9366.ngrok-free.app</domain>
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </domain-config>
</network-security-config>

